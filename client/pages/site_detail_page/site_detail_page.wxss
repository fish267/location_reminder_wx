}

.section input {
    width: 82%;
    margin: 2px 2px;
    border: 2px solid #5422f5;
    height: 30px;
    border-radius: 7px;
    padding: 0 5px;
    font-size: 11px;
    background: #f5f5f5;
}
.section text{
    align-content: right;
    margin: 1px;
    border-radius: 3px;
    border: 1px solid #edfcff;
    font-weight: 900;
    padding: 1px;
}
.text_box {
    margin: 10px 25px;
    border-bottom: 1px solid #43413f;
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
}

.result_list{
    background: #ffffff;
}
.search_result_name {
    font-size: 13px;
    font-weight: 900;
}

.search_result_road {
    font-size: 11px;
    font-weight: 900;
}

.box {
    display: flex;
    flex-direction: column;
    background: white;
}

.body {
    flex: 1;
    padding: 1px auto;
    background: #8EBEFC;
}