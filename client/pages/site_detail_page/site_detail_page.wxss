.map_container {
    position: absolute;
    bottom: 0px;
    left: 0;
    right: 0;
    margin-top: 7px;
}

.map {
    width: 100%;
    height: 100%;
}

.map_text {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0px;
    height: 60px;
    background: #fff;
    padding: 0 10px;
}

.site_name {
    margin: 5px 0;
    display: block;
    font-size: 14px;
    font-weight: bold;
}
.site_except_name{
    font-size: 11px;
    color: #1d1d1d;
}

.one_line{
    display: flex;
    justify-content: space-between;
    margin-top: 3px;
}

.site_type{
    margin-top: 2px;
    font-size: 9px;
}

.section {
