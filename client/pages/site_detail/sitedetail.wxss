.map_container {
    position: absolute;
    top: 30px;
    bottom: 20px;
    left: 0;
    right: 0;
}

.map {
    width: 100%;
    height: 100%;
}

.map_text {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0px;
    height: 80px;
    background: #fff;
    padding: 0 15px;
}

text {
    margin: 5px 0;
    display: block;
    font-size: 12px;
    font: bold;
}

.h1 {
    margin: 15px 0;
    font-size: 15px;
}

.section {
    height: 25px;
    width: 100%;
}

.section input {
    width: 95%;
    margin: 2px 2px;
    border: 2px solid #5422f5;
    height: 30px;
    border-radius: 7px;
    padding: 0 5px;
    font-size: 11px;
}

.text_box {
    margin: 10px 25px;
    border-bottom: 1px solid #43413f;
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
}

.result_list{
    background: #ffffff;
    opacity: 0.7;
}
.search_result_name {
    font-size: 13px;
    font-weight: 900;
}

.search_result_road {
    font-size: 11px;
    font-weight: 900;
}

.box {
    display: flex;
    flex-direction: column;
    background: white;
}

.body {
    flex: 1;
    padding: 1px auto;
}