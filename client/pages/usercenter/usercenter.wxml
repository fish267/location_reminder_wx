<view class="container">

    <view class='userbox'>
        <view class="userinfo">
            <wxc-avatar class="userinfo-avatar">
                <open-data type="userAvatarUrl"></open-data>
            </wxc-avatar>
            <view style='width:30rpx;'></view>
            <view class='userinfo-others'>
                <open-data type="userNickName" class="userinfo-nickname"></open-data>
                <view style='height:40rpx;'></view>

                <view class="one_line">
                    <open-data type="userProvince"></open-data>
                    <open-data type="userCity"></open-data>
                </view>
            </view>
        </view>
        <view class='user-phone-info' wx:if="{{element_flag}}">
            <wxc-label class='my-sign' wx:if="{{score_sign_continuous == 0}}" bindtap="scoresign" type='fill'>
                每日签到
            </wxc-label>
            <wxc-label class='my-sign' wx:if="{{score_sign_continuous > 0}}" bindtap="scoresign" type='fill'
                       type-color="#747bc1">
                已连续签到 {{score_sign_continuous}} 天
            </wxc-label>
        </view>
    </view>

    <view class='h-contents'>
        <view wx:if="{{element_flag}}">
            <view class='a-item'>
                <wxc-icon type='purse' size='{{iconSize-10}}' color='#69C3AA'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <view class='my'>
                    测试中:
                    <view style='padding:0 10rpx;color: #69C3AA;font-weight: bold;'> {{score}}</view>
                </view>
            </view>
            <view class='a-item'>
                <wxc-icon type='yen' size='{{iconSize-10}}' color='#666666' style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <view class='my'>
                    测试中:
                    <view style='padding: 0 10rpx;color: #666666;font-weight: bold;'> {{balance}}</view>
                </view>
            </view>
            <view class='a-item'>
                <wxc-icon type='after-sales' size='{{iconSize-10}}' color='#FF5777'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <view class='my'>
                    测试中:
                    <view style='padding: 0 10rpx;color: #FF5777;font-weight: bold;'> {{freeze}}</view>
                </view>
            </view>
            <view class='a-item'>
                <wxc-icon type='after-sales' size='{{iconSize-10}}' color='#FF5777'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <view class='my'>
                    测试中:
                    <view style='padding: 0 10rpx;color: #FF5777;font-weight: bold;'> {{freeze}}</view>
                </view>
            </view>
        </view>
    </view>

    <view class="user-menu">
        <view class="item a" bindtap="show_todo">
            <navigator url="/pages/ucenter/order-list/index" hover-class="none" class="a">
                <wxc-icon type='feedback' size='{{iconSize}}' color='{{iconColor}}'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <text class="txt" style='color:lightgray;text-decoration: line-through;'>TODO</text>
            </navigator>
        </view>
        <view class="item" bindtap="show_collection">
            <navigator url="/pages/select-address/index" hover-class="none" class="a">
                <wxc-icon type='address' size='{{iconSize}}' color='{{iconColor}}'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <text class="txt" style='color:lightgray;text-decoration: line-through;'>收藏地址</text>
            </navigator>
        </view>
        <view class="item no-border-right" bindtap="show_current_location">
            <navigator url="/pages/ucenter/location/location" hover-class="none" class="a">
                <wxc-icon type='location' size='{{iconSize}}' color='{{iconColor}}'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <text class="txt" style='color:lightgray;text-decoration: line-through;'>当前位置</text>
            </navigator>
        </view>
        <view wx:if="{{element_flag}}">
            <view class="item">
                <navigator url="/pages/ucenter/mycoupons/index" hover-class="none" class="a">
                    <wxc-icon type='coupon' size='{{iconSize}}' color='{{iconColor}}'
                              style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                    <text class="txt">TODO</text>
                </navigator>
            </view>
            <view class="item">
                <navigator url="" hover-class="none" class="a">
                    <wxc-icon type='rate' size='{{iconSize}}' color='lightgray'
                              style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                    <text class="txt" style='color:lightgray;text-decoration: line-through;'>TODO</text>
                </navigator>
            </view>
            <view class="item ">
                <navigator url="/pages/target/index" hover-class="none" class="a">
                    <wxc-icon type='footprint' size='{{iconSize}}'
                              style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                    <text class="txt" style='color:lightgray;text-decoration: line-through;'>足迹</text>
                </navigator>
            </view>
        </view>
        <view class="item item-bottom" bindtap='show_author'>
            <navigator url="" hover-class="none" class="a">
                <wxc-icon type='group' size='{{iconSize}}' color='{{iconColor}}'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <text class="txt">联系</text>
            </navigator>
        </view>
        <view class="item item-bottom" bindtap="aboutUs" bindtap="show_about">
            <navigator url="url" hover-class="none" class="a">
                <wxc-icon type='help' size='{{iconSize}}' color='{{iconColor}}'
                          style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                <text class="txt">关于</text>
            </navigator>
        </view>
        <view class="item no-border-bottom">
            <button open-type="contact" class="button_content a" size="mini">
                <navigator url="/pages/ucenter/feedback/feedback" hover-class="none" >
                    <view  class="remark_icon">
                        <wxc-icon type='comment' size='{{iconSize}}' color='{{iconColor}}'
                                  style='margin:15rpx 0 10rpx 0;'></wxc-icon>
                        <text class="txt">反馈</text>
                    </view>
                </navigator>
            </button>
        </view>
    </view>
    <view style="height:40rpx;width:100%;"></view>

    <view class="version" style='margin-top:50rpx;font-size:18rpx;'>Copyright © 2017-2018 fish267(GitHub ID)
    </view>
    <view class='version' style='height:20rpx;line-height:20rpx;font-size:16rpx;font-style: oblique;'>
        Special Thanks to 67
    </view>
    <view style="height:12rpx;width:100%;"></view>
</view>