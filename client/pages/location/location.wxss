@import '../components/site_tag/site_tag.wxss';

.box {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    background: url('https://gw.alipayobjects.com/zos/rmsportal/DIEZUnxDtjIJCEPRpgbo.jpg') no-repeat;
}

.item {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    min-width: 325px;
    border-radius: 7px;
    background: #cdf2ff;
    margin-top: 20px;
    opacity: 0.93;
}
.item2{
    margin-top: 50px;
}

.body {
    flex: 1;
    padding: 10px 10px 0 10px;
}

.site_remind_list {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 13rpx 13rpx;
    border-bottom: 1px solid #dddddd;
    min-height: auto;
}

.section_title {
    font-size: 33rpx;
    padding: 13rpx 13rpx;
    color: #000000;
    border: 0rpx;
    border-bottom: 1rpx solid #f2f2f2;
    margin-bottom: 3px;
}

.section_one{
    display: flex;
    flex-direction: column;
    justify-content: center;
    border: 2rpx;
    border-radius: 13rpx;
    width: 100%;
}
.section_two{
    display: flex;
    flex-direction: column;
    justify-content: center;
    border: 2rpx;
    border-radius: 13rpx;
    margin-bottom: 10px;
    width: 100%;
}
.switch {
    font-size: 33rpx;
    padding: 13rpx 13rpx;
    color: #6b6b6b;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.location_setup {

}

.section {
    height: 30px;
    width: 100%;
}

.section input {
    width: 90%;
    margin: 5px auto;
    border: 1px solid #c3c3c3;
    height: 30px;
    border-radius: 7px;
    padding: 0 5px;
    font-size: 11px;
}

.text_box {
    margin: 10px 25px;
    border-bottom: 1px solid #c3c3c3;
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
}

.search_result_name {
    font-size: 11px;
}

.search_result_road {
    font-size: 9px;
    color: #989898;
}